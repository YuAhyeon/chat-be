{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "declaration": true,
    "removeComments": true,
    "incremental": true,
    "skipLibCheck": true
  }
}
